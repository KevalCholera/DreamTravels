<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding7">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_anim"
        card_view:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/padding5">

            <TextView
                android:id="@+id/tvElementHistoryOfTripAndTravelsEventCount"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/circular_view"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvElementHistoryOfTripAndTravelsFromDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/date_of_journey_n"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textSize13"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvElementHistoryOfTripAndTravelsToDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/date_of_return_n"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textSize13"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvElementHistoryOfTripAndTravelsPickUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/pickup_n"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textSize13"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvElementHistoryOfTripAndTravelsDropOff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/dropoff_n"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textSize13"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvElementHistoryOfTripAndTravelsTravelMode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/traveling_mode_n"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textSize13"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvElementHistoryOfTripAndTravelsHotelName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/hotel_name_n"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textSize13"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvElementHistoryOfTripAndTravelsAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/amount_"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSize13"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>